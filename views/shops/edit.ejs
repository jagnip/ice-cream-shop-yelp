<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= shop.name %></h1>
        
        <div style="width: 30%; margin: 2% auto;">
            <form action="/shops/<%= shop._id %>?_method=PUT", method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="shop[name]" value="<%= shop.name %>">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="shop[shopdescription]" value="<%= shop.description %>">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="shop[image]" value="<%= shop.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/shops">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>