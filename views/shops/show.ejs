<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                 <img class="responsive" src="<%= shop.image %>">
                 <div class="caption">
                     <h4 class="pull-right">$9.00/scoop</h4>
                     <h3><a><h1><%= shop.name %></h1></a></h3>
                     <p><p><%= shop.description %></p></p>
                 </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/shops/<%= shop._id %>/comments/new">Add new comment</a>
                </div>
                <hr>
                    <% shop.comments.forEach( (comment) => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p><%= comment.text %></p>
                            </div>
                          
                        </div>
                    <% }); %>
                
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>