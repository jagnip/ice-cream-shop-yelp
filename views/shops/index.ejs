<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to IceYelp!</h1>
                <p>View and comment ice-cream shops from Cracovia!</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/shops/new">Add new shop</a>
                </p>
            </div>
        </header>
        
        <div class="row">
            <div class="col-lg-12">
                <h3>Our most popular ice-cream shops:</h3>
            </div>
        </div>
        
          <div class="row text-center" style="display:flex; flex-wrap: wrap;">
               <% shops.forEach( (shop) => { %>
               <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="thumbnail">
                        <img src="<%= shop.image %>">
                        <div class="caption">
                            <h4><%= shop.name %></h4>
                        </div>
                        <p>
                            <a href="/shops/<%= shop._id %>" class="btn btn-primary">More info</a>
                        </p>
                    </div>
                </div>
                <% }); %>
          </div>
    </div>
    
<% include ../partials/footer %>